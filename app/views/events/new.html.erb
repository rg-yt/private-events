<% if @event.errors.any? %>
  <% @event.errors.each do |error| %>
    <p><%= error.full_message %></p>
  <% end %>
<% end %>

<%= form_with model: @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit 'Submit' %>
<% end %>
  